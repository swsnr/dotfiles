[core]
	# Make git cope with CRLF line endings
	autocrlf = input
	# Use Windows built-in SSH client
	sshcommand = C:/Windows/System32/OpenSSH/ssh.exe
# Credential helper
[credential]
	helper = manager
# Use winmerge (<http://winmerge.org/>) as merge tool on Windows
[diff]
	tool = winmerge
[merge]
	tool = winmerge
