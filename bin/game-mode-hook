# Gets run by gamemode whenever it's toggled on or off

set -euo pipefail

show_banners() {
    gsettings set org.gnome.desktop.notifications show-banners "$1"
}

set_profile() {
    powerprofilesctl set "$1"
}

game_mode_on() {
    set_profile "performance"
    show_banners false
}

game_mode_off() {
    set_profile "balanced"
    show_banners true
}

main() {
    case "$1" in
    on)
        game_mode_on
        ;;
    off)
        game_mode_off
        ;;
    esac
}

main "$@"
